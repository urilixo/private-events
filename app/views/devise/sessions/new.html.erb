<div class="section">
  <div class="container is-fluid">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="card">
          <div class="card-header">
            <p class="card-header-title">Log in</p>
          </div>
          <div class="card-content">
            <div class="content">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <div class="control">
                  <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: 'input', autocomplete: "email" },
                          wrapper: false %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password,
                          required: false,
                          input_html: { class: 'input', autocomplete: "current-password" },
                          wrapper: false %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :remember_me, wrapper:false, as: :boolean if devise_mapping.rememberable? %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.button :submit, "Log in", class: 'button is-info' %>
                </div>
              </div>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>