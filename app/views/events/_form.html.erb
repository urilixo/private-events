<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="field">
    <div class="control">
    <%= f.input :title,
                wrapper: false,
                input_html: {class: 'input'},
                label_html: {class: 'label'}
    %>
    </div>
  </div>
  <div class="field">
    <div class="control">
    <%= f.input :description,
                wrapper: false,
                input_html: {class: 'textarea'},
                label_html: {class: 'label'}
    %>
    </div>
  </div>
  <div class="field">
    <div class="control">
    <%= f.input :location,
                wrapper: false,
                input_html: {class: 'input'},
                label_html: {class: 'label'}
    %>
    </div>
  </div>
  <div class="field">
    <div class="control">
    <%= f.input :date,
                wrapper: false,
                input_html: {class: 'date'},
                label_html: {class: 'label'},
                start_year: Date.today.year,
                end_year: Date.today.year + 10
            
    %>
    </div>
  </div>
  <div class="field">
    <div class="control">
    <%= f.input :is_private,
                wrapper: false,
                input_html: {class: 'checkbox'},
                label_html: {class: 'checkbox'}
    %>?
    </div>
  </div>
  <div class="field">
    <div class="control">
    <% if event.event_image.attached? && event.event_image.representable? %>
      <%= image_tag event.event_image.variant(resize: '720x240').processed %>
      <%= link_to '#', class: 'replace-upload' do %>
        Replace Current Image
      <% end %>
    <span class ="separator-bar"> | </span>
      <%= link_to 'Remove image without replacing',
                   delete_image_event_path(image_id: event.event_image.id),
                   method: :delete,
                   data: { confirm: 'Are you sure?'},
                   class: 'remove-upload' 
      %>
    <% end %>
      <%= f.file_field :event_image, class: 'control' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
    <%= f.button :submit,
                wrapper: false,
                class: 'button is-primary',
                label_html: {class: 'label'}
    %>
    </div>
  </div>
  <% end %>
 


